<link rel="stylesheet" href="/css/report-sale.css">
<div class="container__report-sale">
    <div class="header__report-sale">
        <div class="header__report-sale__title">Báo cáo doanh thu</div>
    </div>
    <div class="ctner__report-sale">
        <div class="toolbar__report-sale">
            <div class="toolbar__report-sale-date">
                <p class="toolbar__report-sale-date__title">Ngày lập báo cáo:</p>
                <input type="date" class="toolbar__report-sale-date__input" id="report-sale-date-input" readonly
                    value="{{report_sale_date}}">
            </div>
            <div class="toolbar__active">
                <div class="toolbar__search">
                    <div class="toolbar__search-month">
                        <p class="toolbar__search-month__title">Tháng: </p>
                        <select name="" id="search-select--month" class="toolbar__search-month__select">
                            <option hidden>{{month}}</option>
                        </select>
                    </div>
                    <div class="toolbar__search-year">
                        <p class="toolbar__search-year__title">Năm: </p>
                        <select name="" id="search-select--year" class="toolbar__search-year__select">
                            <option hidden>{{year}}</option>
                        </select>
                    </div>

                    {{!-- <span class="ti-search toolbar__search-icon"></span> --}}
                    <button class="toolbar__search-btn btn btn--primary" id="search-btn" data-check="{{check}}">Tìm kiếm</button>
                </div>
                <div class="toolbar__btn">
                    <button class="toolbar__btn-add btn btn--primary" data-toggle="modal"
                        data-target="#form-add-report-sale" id="toobar-btn-add">Lập báo
                        cáo</button>
                    {{!-- <button class="toolbar__btn-edit btn btn--edit-item" data-toggle="modal"
                        data-target="#form-edit-report-sale">Sửa báo cáo</button> --}}
                    <button class="toolbar__btn-export btn btn-success" id="toolbar-btn-export"
                        onclick="printDiv('printtableArea')">Xuất bản in</button>
                </div>
            </div>
        </div>
        <div class="list-report-sale" id="printtableArea">
            <table class="table table--default">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#Stt</th>
                        <th scope="col">Biển số xe</th>
                        <th scope="col">Hiệu xe</th>
                        <th scope="col">Tên khách hàng</th>
                        <th scope="col">Số điện thoại</th>
                        <th scope="col">Ngày tiếp nhận</th>
                        <th scope="col">Số tiền nợ</th>
                        <th scope="col">Thanh toán</th>
                        <th scope="col">Trạng thái</th>
                        <th scope="col" colspan="2"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each list}}
                    <tr data-id="{{this._id}}">
                        <th scope="row">{{@index}}</th>
                        <td>{{this.license}}</td>
                        <td>{{this.brand.name}}</td>
                        <td>{{this.of_customer.name}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{this.receptionDate}}</td>
                        <td>{{this.debt}}</td>
                        <td>{{this.total_money}}</td>
                        <td>{{this.status}}</td>
                        <td></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer__report-sale">
        <div class="total-money">
            <div class="total-money__title">Tổng tiền:</div>
            <p class="total-money__value" id="total-money__p">{{total_money}}</p>
        </div>
    </div>
</div>

