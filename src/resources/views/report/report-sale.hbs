<!-- FORM Lập báo cáo-->
<form method="POST" action="/reportsale/create">
    <div class="modal fade" id="form-add-report-sale" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Báo cáo doanh thu</h5>
                    <button type="button report-sale__form-btn-close" class="close" data-dismiss="modal"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="report-sale-add-month" class="col-form-label">Tháng:</label>
                            <input type="text" class="form-control" id="report-sale-add-month" name="month">
                        </div>
                        <div class="form-group">
                            <label for="report-sale-add-year" class="col-form-label">Năm:</label>
                            <input type="text" class="form-control" id="report-sale-add-year" name="year" required>
                        </div>

                        <div class="form-group">
                            <label for="report-sale-add-date" class="col-form-label">Ngày lập:</label>
                            <input type="date" class="form-control" id="report-sale-add-date" name="report_sale_date"
                                required readonly>
                        </div>
                        <div class="form-group">
                            <label for="report-sale-add-total-money" class="col-form-label">Tổng tiền:</label>
                            <input type="text" class="form-control" id="report-sale-add-total-money" name="total_money"
                                required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn--close-dialog" data-dismiss="modal">Đóng</button>
                    <button id="btn-add-report-sale" type="submit" class="btn btn--send-dialog">Thêm</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- FORM SỬA báo cáo-->
