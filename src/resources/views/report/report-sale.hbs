                        </div>
                        <div class="form-group">
                            <label for="report-sale-edit-year" class="col-form-label">Năm:</label>
                            <input type="text" class="form-control" id="report-sale-edit-year" name="year" required>
                        </div>

                        <div class="form-group">
                            <label for="report-sale-edit-date" class="col-form-label">Ngày lập:</label>
                            <input type="date" class="form-control" id="report-sale-edit-date" name="report_sale_date"
                                required readonly>
                        </div>
                        <div class="form-group">
                            <label for="report-sale-edit-total-money" class="col-form-label">Tổng tiền:</label>
                            <input type="text" class="form-control" id="report-sale-edit-total-money" name="total_money"
                                required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn--close-dialog" data-dismiss="modal">Đóng</button>
