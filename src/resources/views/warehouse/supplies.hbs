<link rel="stylesheet" href="./css/supplies.css" />

<div
  class="modal fade"
  id="addModal"
  tabindex="-1"
  aria-labelledby="addSupplyLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form action="/supply/create" method="POST">
      <div class="modal-header">
        <h5 class="modal-title">Thêm vật tư</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Mã vật tư</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="supply_id"/>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Tên vật tư</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="name"/>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Nhà cung cấp</label>
            <div class="col-9 form-group">
              <select class="form-control" aria-label="Default select example">
                <option value="null">Nhà cung cấp</option>
                {{#each suppliers}}
                <option value="{{this.supplier_id}}">{{this.name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Giá nhập</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="import_price" />
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Giá bán</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="sell_price" />
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success">Thêm</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Hủy
        </button>
      </div>
      </form>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="editModal"
  tabindex="-1"
  aria-labelledby="editSupplyLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form action="/supply/edit" method="POST" name="form-edit">
      <div class="modal-header">
        <h5 class="modal-title">Sửa vật tư</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Mã vật tư</label>
            <div class="col-9">
              <input type="text" class="form-control" id="supplyIdInEdit" name="supply_id"/>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Tên vật tư</label>
            <div class="col-9">
              <input type="text" class="form-control" id="supplyNameInEdit" name="name"/>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Nhà cung cấp</label>
            <div class="col-9 form-group">
              <select class="form-control" id="supplierInEdit" aria-label="Default select example">
                <option value="null">Nhà cung cấp</option>
                {{#each suppliers}}
                <option value="{{this.supplier_id}}">{{this.name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Giá nhập</label>
            <div class="col-9">
              <input type="text" class="form-control" id="importPriceInEdit" name="import_price" />
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Giá bán</label>
            <div class="col-9">
              <input type="text" class="form-control" id="sellPriceInEdit" name="sell_price" />
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success">Sửa</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Hủy
        </button>
      </div>
      </form>
    </div>
  </div>
</div>

<div class="row">
  <div class="d-grid gap-2 d-flex justify-content-end">
    <button
      type="button"
      class="btn btn-success"
      data-bs-toggle="modal"
      data-bs-target="#addModal"
    >
      Thêm
    </button>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Mã vật tư</th>
      <th scope="col">Tên vật tư</th>
      <th scope="col">Số lượng</th>
      <th scope="col">Giá nhập</th>
      <th scope="col">Giá bán</th>
      <th scope="col">Thao tác</th>
    </tr>
  </thead>
  <tbody>
    {{#each supplies}}
      <tr>
        <td>{{this.supply_id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.amount}}</td>
        <td>{{this.import_price}}</td>
        <td>{{this.sell_price}}</td>
        <td>
          <button class="btn-delete" data-id="{{this._id}}">Xóa</button>
          <button type="button" class="btn-edit" data-id="{{this._id}}" 
          data='{ "supply_id": "{{this.supply_id}}", "name": "{{this.name}}", "import_price": {{this.import_price}}, "sell_price": {{this.sell_price}} }'>Sửa</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<div
  class="modal fade"
  id="deleteModal"
  tabindex="-1"
  aria-labelledby="deleteSupplyLabel"
  aria-hidden="true"
>
<div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Xóa vật tư</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">Bạn có chắc chắn muốn xóa?</div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" id="btnModalDelete">Xóa</button>
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Đóng
            </button>
          </div>
        </div>
      </div>
</div>


<form name="form-delete" method="POST" action=""></form>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
  crossorigin="anonymous"
></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var btnEdit = document.querySelectorAll('.btn-edit')
    var btnDelete = document.querySelectorAll('.btn-delete')
    var btnModalDelete = document.getElementById('btnModalDelete');
    var formDelete = document.forms['form-delete']
    var formEdit = document.forms['form-edit']
    
    for(var item of btnDelete) {
      item.setAttribute('data-bs-toggle', 'modal')
      item.setAttribute('data-bs-target', '#deleteModal')
      item.onclick = function() {
        var supplyId = this.getAttribute('data-id')
        btnModalDelete.setAttribute('data-id', supplyId);
      }
    }

    btnModalDelete.onclick = function () {
      var supplyId = this.getAttribute('data-id')
      formDelete.action = '/supply/' + supplyId + '/delete?_method=DELETE'
      formDelete.submit()
    }

    for (var item of btnEdit) {
      item.setAttribute('data-bs-toggle', 'modal')
      item.setAttribute('data-bs-target', '#editModal')
      item.onclick = function () {
        var json = JSON.parse(this.getAttribute('data'))

        document.getElementById('supplyIdInEdit').value = json["supply_id"]
        document.getElementById('supplyNameInEdit').value = json["name"]
        document.getElementById('importPriceInEdit').value = json["import_price"]
        document.getElementById('sellPriceInEdit').value = json["sell_price"]
      }
    }
  })
</script>