{{!-- Danh sách vật tư --}}

<div class="grid__content">
  <div class="header__breadcrumb">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Danh sách vật tư</a></li>
        </ol>
    </nav>
  </div>
<div class="toolbar">
    <div class="toolbar__search">
        <div class="search-form">
          <input type="search" value="" placeholder="Tìm kiếm" class="search-input" id="search-input">
          <button type="button" class="search-button">
            <span class="ti-search "> </span>
          </button>
        </div>
    </div>
    <div class="toolbar__filter"></div>
    <div class="toolbar__btn">
        <button class="toolbar__btn-add btn btn-primary" data-toggle="modal" data-target="#addModal">Thêm vật tư</button>
        <button class="toolbar__btn-add btn btn-primary" id="table-to-excel-btn">Xuất excel</button>
    </div>
</div>

<table class="table " id="material-list">
  <thead class="thead-dark"> 
    <tr>
      <th scope="col">Tên vật tư</th>
      <th scope="col">Nhà cung cấp</th>
      <th scope="col">Số lượng</th>
      <th scope="col">Giá nhập</th>
      <th scope="col">Giá bán</th>
      <th scope="col" colspan="2">Thao tác</th>
    </tr>
  </thead>
  <tbody id="table-data">
    {{#each materials}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.of_supplier.name}}</td>
        <td>{{this.amount}}</td>
        <td>{{this.import_price}}đ</td>
        <td>{{this.sell_price}}đ</td>
        <td>
          <button class="btn--edit-item" data-id="{{this._id}}" data-bs-toggle="modal" data-bs-target="#editModal">Sửa</button>
          <button class="btn--delete-item" data-id="{{this._id}}" data-bs-toggle="modal" data-bs-target="#deleteModal">Xóa</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<table class="table " id="data-table" style="visibility: collapse;">
  <thead class="thead-dark"> 
    <tr>
      <th scope="col">Tên vật tư</th>
      <th scope="col">Nhà cung cấp</th>
      <th scope="col">Số lượng</th>
      <th scope="col">Giá nhập</th>
      <th scope="col">Giá bán</th>
    </tr>
  </thead>
  <tbody>
    {{#each materials}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.of_supplier.name}}</td>
        <td>{{this.amount}}</td>
        <td>{{this.import_price}}</td>
        <td>{{this.sell_price}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>

