<link rel="stylesheet" href="./css/materials.css" />

{{!-- Modal thêm vật tư --}}

<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addMaterialLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form action="/material/create" method="POST">
      <div class="modal-header">
        <h5 class="modal-title">Thêm vật tư</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Mã vật tư</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="material_id"/>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Tên vật tư</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="name"/>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Nhà cung cấp</label>
            <div class="col-9 form-group">
              <select class="form-control" name="of_supplier" aria-label="Default select example">
                <option value="null">Nhà cung cấp</option>
                {{#each suppliers}}
                <option value="{{this._id}}">{{this.name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Giá nhập</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="import_price" />
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Giá bán</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="sell_price" />
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success">Thêm</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Hủy
        </button>
      </div>
      </form>
    </div>
  </div>
</div>


{{!-- Modal sửa vật tư --}}
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editMaterialLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form method="POST" name="form-edit">
      <div class="modal-header">
        <h5 class="modal-title">Sửa vật tư</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Mã vật tư</label>
            <div class="col-9">
              <input type="text" class="form-control" id="material-edit-id" name="material_id"/>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Tên vật tư</label>
            <div class="col-9">
              <input type="text" class="form-control" id="material-edit-name" name="name"/>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Nhà cung cấp</label>
            <div class="col-9 form-group">
              <select class="form-control" name="of_supplier" id="material-edit-supplier" aria-label="Default select example">
                <option value="null">Nhà cung cấp</option>
                {{#each suppliers}}
                <option value="{{this.supplier_id}}">{{this.name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Giá nhập</label>
            <div class="col-9">
              <input type="text" class="form-control" id="material-edit-importPrice" name="import_price" />
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Giá bán</label>
            <div class="col-9">
              <input type="text" class="form-control" id="material-edit-sellPrice" name="sell_price" />
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success" id="btnModalEdit">Sửa</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Hủy
        </button>
      </div>
      </form>
    </div>
  </div>
</div>

{{!-- Modal xóa vật tư --}}
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteMaterialLabel" aria-hidden="true">
<div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Xóa vật tư</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">Bạn có chắc chắn muốn xóa?</div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" id="btnModalDelete">Xóa</button>
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Đóng
            </button>
          </div>
        </div>
      </div>
</div>


{{!-- Danh sách vật tư --}}
<div class="row">
  <div class="d-grid gap-2 d-flex justify-content-end">
    <button
      type="button"
      class="btn btn-success"
      data-bs-toggle="modal"
      data-bs-target="#addModal"
    >
      Thêm
    </button>
  </div>
</div>

<table class="table table--default">
  <thead class="thead-dark"> 
    <tr>
      <th scope="col">Mã vật tư</th>
      <th scope="col">Tên vật tư</th>
      <th scope="col">Số lượng</th>
      <th scope="col">Giá nhập</th>
      <th scope="col">Giá bán</th>
      <th scope="col" colspan="2">Thao tác</th>
    </tr>
  </thead>
  <tbody>
    {{#each materials}}
      <tr>
        <td>{{this.material_id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.amount}}</td>
        <td>{{this.import_price}}</td>
        <td>{{this.sell_price}}</td>
        <td>
          <button class="btn--delete-item" data-id="{{this._id}}" data-bs-toggle="modal" data-bs-target="#deleteModal">Xóa</button>
          <button class="btn--edit-item" data-id="{{this._id}}" data-bs-toggle="modal" data-bs-target="#editModal">Sửa</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>



<form name="form-delete" method="POST" action=""></form>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
  crossorigin="anonymous"
></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var btnEdit = document.querySelectorAll('.btn--edit-item')
    var btnDelete = document.querySelectorAll('.btn--delete-item')
    var btnModalDelete = document.getElementById('btnModalDelete')
    var btnModalEdit = document.getElementById('btnModalEdit')
    var formDelete = document.forms['form-delete']
    var formEdit = document.forms['form-edit']
    
    for(var item of btnDelete) {
      item.onclick = function() {
        var materialId = this.getAttribute('data-id')
        btnModalDelete.setAttribute('data-id', materialId)
      }
    }

    for(var item of btnEdit) {
      item.onclick = function() {
        var materialId = this.getAttribute('data-id')
        btnModalEdit.setAttribute('data-id', materialId)
      }

      var rowData = item.parentElement.parentElement

      document.getElementById('material-edit-id').value = rowData.cells[0].textContent
      document.getElementById('material-edit-name').value = rowData.cells[1].textContent
      document.getElementById('material-edit-importPrice').value = rowData.cells[3].textContent
      document.getElementById('material-edit-sellPrice').value = rowData.cells[4].textContent
    }

    btnModalDelete.onclick = function () {
      var materialId = this.getAttribute('data-id')
      formDelete.action = '/material/' + materialId + '/delete?_method=DELETE'
      formDelete.submit()
    }

    btnModalEdit.onclick = function () {
      var materialId = this.getAttribute('data-id')
      formEdit.action = '/material/' + materialId + '/?_method=PUT'
      console.log(formEdit)
      formEdit.submit()
    }


  })
</script>