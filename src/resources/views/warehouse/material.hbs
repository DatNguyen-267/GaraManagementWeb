<script>
  document.addEventListener('DOMContentLoaded', function () {

    $(document).ready(function () {
        $('#search-input').on('keyup', function (event) {
        event.preventDefault();
        /* Act on the event */
        var keyword = $(this).val().toLowerCase();
        $('#table-data tr').filter(function () {
            $(this).toggle($(this).text().toLowerCase().indexOf(keyword) > -1);
        });
        });
    });

    Validator({
      form: '#form-add',
      errorSelector: '.form-message',
      rules: [
        Validator.isRequire('#add-name', 'Vui lòng nhập tên vật tư'),
        Validator.isRequireSelectBox('#add-supplier', '-- Nhà cung cấp --', 'Vui lòng chọn nhà cung cấp'),
        Validator.isRequire('#add-import-price', 'Vui lòng nhập giá nhập vật tư'),
        Validator.isRequire('#add-sell-price', 'Vui lòng nhập giá bán vật tư'),
        Validator.isNumber('#add-import-price'),
        Validator.isNumber('#add-sell-price'),
      ],
      onSubmit: function () {
        var name = document.getElementById('add-name').value
        if(!checkExist(name)) {
          formAdd.action = 'material/create'
          formAdd.submit()
        } else {
          alert("Vật tư này đã tồn tại")
        }
      }
    })

    Validator({
      form: '#form-edit',
      errorSelector: '.form-message',
      rules: [
        Validator.isRequire('#edit-name', 'Vui lòng nhập tên vật tư'),
        Validator.isRequireSelectBox('#edit-supplier', '-- Nhà cung cấp --', 'Vui lòng chọn nhà cung cấp'),
        Validator.isRequire('#edit-import-price', 'Vui lòng nhập giá nhập vật tư'),
        Validator.isRequire('#edit-sell-price', 'Vui lòng nhập giá bán vật tư'),
        Validator.isNumber('#edit-import-price'),
        Validator.isNumber('#edit-sell-price'),
      ],
      onSubmit: function () {
        var name = document.getElementById('edit-name').value
        if(!checkExist(name)) {
          formEdit.action = 'material/' + materialId + '/?_method=PUT'
          formEdit.submit()
        } else {
          alert("Vật tư này đã tồn tại")
        }
      }
    })

    document.getElementById('table-to-excel-btn').onclick = function () {
      var table2Excel = new Table2Excel()
      table2Excel.export(document.getElementById('data-table'), 'danh-sach-vat-tu')
    }

    var btnEdit = document.querySelectorAll('.btn--edit-item')
    var btnDelete = document.querySelectorAll('.btn--delete-item')
    var btnModalDelete = document.getElementById('btnModalDelete')
    var btnModalEdit = document.getElementById('btnModalEdit')
    var formAdd = document.forms['form-add']
    var formDelete = document.forms['form-delete']
    var formEdit = document.forms['form-edit']

    var materialID

    var materialList = document.getElementById('table-data').rows
    const checkExist = (name) => {
      for(var row of materialList) {
        if(name == row.cells[0].textContent) {
          return true
        }
      }
      return false
    }

    for(var item of btnDelete) {
      item.onclick = function() {
        var materialId = this.getAttribute('data-id')
        btnModalDelete.setAttribute('data-id', materialId)
      }
    }

    for(var item of btnEdit) {
      item.onclick = function() {
        var rowData = this.parentElement.parentElement

        document.getElementById('edit-name').value = rowData.cells[0].textContent
        document.getElementById('edit-import-price').value = rowData.cells[3].textContent
        document.getElementById('edit-sell-price').value = rowData.cells[4].textContent

        materialId = this.getAttribute('data-id')
      }
    }

    btnModalDelete.onclick = function () {
      materialId = this.getAttribute('data-id')
      formDelete.action = 'material/' + materialId + '/delete?_method=DELETE'
      formDelete.submit()
    }


  })
</script>