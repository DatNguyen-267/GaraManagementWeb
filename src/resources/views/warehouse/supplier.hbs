<link rel="stylesheet" href="./css/suppliers.css" />

{{!-- Modal thêm nhà cung cấp --}}

<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addSupplierLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form action="/supplier/create" method="POST">
      <div class="modal-header">
        <h5 class="modal-title">Thêm nhà cung cấp</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Mã nhà cung cấp</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="supplier_id"/>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Tên nhà cung cấp</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="name"/>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Email</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="email" />
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Số điện thoại</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="telephone" />
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success">Thêm</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Hủy
        </button>
      </div>
      </form>
    </div>
  </div>
</div>


{{!-- Modal sửa nhà cung cấp --}}
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editSupplierLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form method="POST" name="form-edit">
      <div class="modal-header">
        <h5 class="modal-title">Sửa nhà cung cấp</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Mã nhà cung cấp</label>
            <div class="col-9">
              <input type="text" class="form-control" id="supplier-edit-id" name="supplier_id"/>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Tên nhà cung cấp</label>
            <div class="col-9">
              <input type="text" class="form-control" id="supplier-edit-name" name="name"/>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Email</label>
            <div class="col-9">
              <input type="text" class="form-control" id="supplier-edit-email" name="email" />
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Số điện thoại</label>
            <div class="col-9">
              <input type="text" class="form-control" id="supplier-edit-telephone" name="telephone" />
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success" id="btnModalEdit">Sửa</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Hủy
        </button>
      </div>
      </form>
    </div>
  </div>
</div>

{{!-- Modal xóa nhà cung cấp --}}
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteSupplierLabel" aria-hidden="true">
<div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Xóa nhà cung cấp</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">Bạn có chắc chắn muốn xóa?</div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" id="btnModalDelete">Xóa</button>
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Đóng
            </button>
          </div>
        </div>
      </div>
</div>


{{!-- Danh sách vật tư --}}
<div class="row">
  <div class="d-grid gap-2 d-flex justify-content-end">
    <button
      type="button"
      class="btn btn-success"
      data-bs-toggle="modal"
      data-bs-target="#addModal"
    >
      Thêm
    </button>
  </div>
</div>

<table class="table table--default">
  <thead class="thead-dark"> 
    <tr>
      <th scope="col">Mã nhà cung cấp</th>
      <th scope="col">Tên</th>
      <th scope="col">Email</th>
      <th scope="col">Số điện thoại</th>
      <th scope="col" colspan="2">Thao tác</th>
    </tr>
  </thead>
  <tbody>
    {{#each suppliers}}
      <tr>
        <td>{{this.supplier_id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.telephone}}</td>
        <td>
          <button class="btn--delete-item" data-id="{{this._id}}" data-bs-toggle="modal" data-bs-target="#deleteModal">Xóa</button>
          <button class="btn--edit-item" data-id="{{this._id}}" data-bs-toggle="modal" data-bs-target="#editModal">Sửa</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>



<form name="form-delete" method="POST" action=""></form>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
  crossorigin="anonymous"
></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var btnEdit = document.querySelectorAll('.btn--edit-item')
    var btnDelete = document.querySelectorAll('.btn--delete-item')
    var btnModalDelete = document.getElementById('btnModalDelete')
    var btnModalEdit = document.getElementById('btnModalEdit')
    var formDelete = document.forms['form-delete']
    var formEdit = document.forms['form-edit']
    
    for(var item of btnDelete) {
      item.onclick = function() {
        var supplierId = this.getAttribute('data-id')
        btnModalDelete.setAttribute('data-id', supplierId)
      }
    }

    for(var item of btnEdit) {
      item.onclick = function() {
        var supplierId = this.getAttribute('data-id')
        btnModalEdit.setAttribute('data-id', supplierId)
      }

      var rowData = item.parentElement.parentElement

      document.getElementById('supplier-edit-id').value = rowData.cells[0].textContent
      document.getElementById('supplier-edit-name').value = rowData.cells[1].textContent
      document.getElementById('supplier-edit-email').value = rowData.cells[2].textContent
      document.getElementById('supplier-edit-telephone').value = rowData.cells[3].textContent
    }

    btnModalDelete.onclick = function () {
      var supplierId = this.getAttribute('data-id')
      formDelete.action = '/supplier/' + supplierId + '/delete?_method=DELETE'
      formDelete.submit()
    }

    btnModalEdit.onclick = function () {
      var supplierId = this.getAttribute('data-id')
      formEdit.action = '/supplier/' + supplierId + '/?_method=PUT'
      formEdit.submit()
    }
  })
</script>