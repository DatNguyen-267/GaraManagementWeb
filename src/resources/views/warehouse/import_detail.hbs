
{{!-- Modal thêm vật tư --}}
<div class="modal fade" id="addModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form action="" method="POST" name="form-add" id="form-add">
      <div class="modal-header">
        <h5 class="modal-title">Thêm vật tư</h5>
        <button type="button reception__form-btn-close" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Vật tư</label>
            <div class="col-9 form-group">
              <select class="form-control" name="material" id="add-material">
                <option>-- Loại vật tư --</option>
                {{#each materials}}
                <option value="{{this._id}}">{{this.name}}</option>
                {{/each}}
              </select>
              <span class="form-message"></span>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Giá nhập</label>
            <div class="col-9">
              <input type="text" class="form-control" id="add-import-price" name="import_price" />
              <span class="form-message"></span>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Số lượng</label>
            <div class="col-9"> 
              <input type="text" class="form-control" id="add-amount" name="amount" />
              <span class="form-message"></span>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn--close-dialog" data-dismiss="modal">Đóng</button>
        <button type="submit" class="btn btn--send-dialog">Thêm</button>
      </div>
      </form>
    </div>
  </div>
</div>

