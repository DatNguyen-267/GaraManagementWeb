{{!-- Modal xóa vật tư --}}
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
<div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Xóa vật tư</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
