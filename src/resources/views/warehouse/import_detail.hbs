
{{!-- Modal thêm vật tư --}}
<div class="modal fade" id="addModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form action="" method="POST" name="form-add">
      <div class="modal-header">
        <h5 class="modal-title">Thêm vật tư</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Vật tư</label>
            <div class="col-9 form-group">
              <select class="form-control" name="material" aria-label="Default select example">
                <option value="null">Loại vật tư</option>
                {{#each materials}}
                <option value="{{this._id}}">{{this.name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Giá nhập</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="import_price" />
            </div>
          </div>
          <div class="p-2 row">
            <label for="" class="col-3 col-form-label">Số lượng</label>
            <div class="col-9">
              <input type="text" class="form-control" id="" name="amount" />
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success">Thêm</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Hủy
        </button>
      </div>
      </form>
    </div>
  </div>
</div>

