{{!-- Danh sách vật tư --}}
<div class="row">
  <div class="d-grid gap-2 d-flex justify-content-end">
    <button
      type="button"
      class="btn btn-success"
      data-bs-toggle="modal"
      data-bs-target="#addModal"
    >
      Thêm
    </button>
  </div>
  <div class="d-grid gap-2 d-flex justify-content-end">
    <button
      type="button"
      class="btn btn-warning"
      data-bs-toggle="modal"
      data-bs-target="#importModal"
    >
      Nhập kho
    </button>
  </div>
</div>

<table class="table table--default">
  <thead class="thead-dark"> 
    <tr>
      <th scope="col">Tên vật tư</th>
      <th scope="col">Số lượng</th>
      <th scope="col">Giá nhập</th>
      <th scope="col" colspan="2">Thao tác</th>
    </tr>
  </thead>
  <tbody>
    {{#each details}}
      <tr>
        <td>{{this.material.name}}</td>
        <td>{{this.amount}}</td>
        <td>{{this.import_price}}</td>
        <td>
          <button class="btn--delete-item" data-id="{{this._id}}" data-bs-toggle="modal" data-bs-target="#deleteModal">Xóa</button>
          <button class="btn--edit-item" data-id="{{this._id}}" data-bs-toggle="modal" data-bs-target="#editModal">Sửa</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<form name="form-delete" method="POST" action=""></form>
<form name="form-import" method="PUT" action=""></form>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
  crossorigin="anonymous"
></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var addMaterialForm = document.getElementById('addMaterialForm')
    var btnDelete = document.querySelectorAll('.btn--delete-item')
    var btnEdit = document.querySelectorAll('.btn--edit-item')
    var btnModalDelete = document.getElementById('btnModalDelete')
    var btnModalEdit = document.getElementById('btnModalEdit')
    var btnModalImport = document.getElementById('btnModalImport')
    var formAdd = document['form-add']
    var formDelete = document['form-delete']
    var formEdit = document['form-edit']
    var formImport = document['form-import']

    formAdd.action = window.location.pathname + '/add'
    formImport.action = window.location.pathname + '/?_method=PUT'

    for(var item of btnDelete) {
      item.onclick = function() {
        var detailID = this.getAttribute('data-id') 
        btnModalDelete.setAttribute('data-id', detailID)
      }
    }

    for(var item of btnEdit) {
      item.onclick = function() {
        var detailID = this.getAttribute('data-id') 
        btnModalEdit.setAttribute('data-id', detailID)
      }
    }

    btnModalDelete.onclick = function () {
      var detailID = this.getAttribute('data-id')
      formDelete.action = `${window.location.pathname}/${detailID}/delete?_method=DELETE`
      formDelete.submit()
    }

    btnModalEdit.onclick = function () {
      var detailID = this.getAttribute('data-id')
      formEdit.action = `${window.location.pathname}/${detailID}/?_method=PUT`
      formEdit.submit()
    }

    btnModalImport.onclick = function () {
      formImport.submit()
    }
  })
</script>