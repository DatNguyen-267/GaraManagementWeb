    <div class="list-customer-debt">
      <table class="table table--default">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#Stt</th>
            <th scope="col">Họ và tên</th>
            <th scope="col">CMND</th>
            <th scope="col">Email</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col">Mã phiếu</th>
            <th scope="col">Ngày tiếp nhận</th>
            <th scope="col">Số tiền nợ</th>
            <th scope="col" colspan="2"></th>
          </tr>
        </thead>
        <tbody id="table-body">
          {{#each listdebt}}
          <tr data-id="{{this._id}}">
            <th scope="row">{{@index}}</th>
            <td>{{this.name}}</td>
            <td>{{this.cardIdentify}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            {{#each this.of_reception}}
              <td>{{this._id}}</td>
              <td>{{this.receptionDate}}</td>
            {{/each}}
            <td>{{this.debt}}</td>
            <td></td>
            {{!-- <td>
              <button class="btn--view-item" data-id="{{this._id}}">Xem</button>
            </td> --}}
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

